<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="-Infinity" minHeight="-Infinity" prefHeight="825.0" prefWidth="465.0" spacing="8.0" style="-fx-background-color: #f2f2f2; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ems.ems.JobPostController">

   <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 10px 0;" text="Job Post" />

   <Label text="Job Title:" />
   <TextField fx:id="titleField" style="-fx-pref-width: 300px;" />

   <Label text="Company:" />
   <TextField fx:id="companyField" style="-fx-pref-width: 300px;" />

   <Label text="Job Description:" />
   <TextArea fx:id="descriptionArea" prefHeight="62.0" prefWidth="426.0" style="-fx-pref-width: 300px; -fx-pref-height: 100px;" />

   <Label text="Qualifications:" />
   <TextArea fx:id="qualificationsArea" prefHeight="85.0" prefWidth="426.0" style="-fx-pref-width: 300px; -fx-pref-height: 100px;" />

   <Label text="Responsibilities:" />
   <TextArea fx:id="responsibilitiesArea" style="-fx-pref-width: 300px; -fx-pref-height: 100px;" />

   <Label text="Salary:" />
   <TextField fx:id="salaryField" style="-fx-pref-width: 300px;" />

   <Label text="Contact Email:" />
   <TextField fx:id="emailField" style="-fx-pref-width: 300px;" />

   <Button fx:id="postButton" onAction="#postJob" style="-fx-pref-width: 100px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Post Job" />

</VBox>
